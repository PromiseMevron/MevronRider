<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".payment.CardDetailsFragment">

    <ImageButton
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/close"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:contentDescription="@string/close_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_details"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_32sdp"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/poppins_regular"
        android:textFontWeight="500"
        android:id="@+id/state_of_location"
        tools:targetApi="p" />


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginEnd="@dimen/_14sdp"
      android:background="@drawable/ic_black_background"
      android:layout_marginStart="@dimen/_14sdp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_height="@dimen/_160sdp">



      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          android:fontFamily="@font/poppins_regular"
          android:textColor="#ffffff"
          tools:text="sssss"
          android:textAlignment="center"
          android:textSize="@dimen/_18ssp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:id="@+id/card_number"/>


      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_regular"
          android:textColor="#ffffff"
          tools:text="09/32"
          android:textAlignment="center"
          android:textSize="@dimen/_10ssp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_14sdp"
          android:id="@+id/expiry_number"/>

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_regular"
          android:textColor="#ffffff"
          android:text="@string/expiry_date"
          android:textAlignment="center"
          android:textSize="@dimen/_10ssp"
          app:layout_constraintBottom_toTopOf="@id/expiry_number"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="@dimen/_1sdp"
          android:layout_marginEnd="@dimen/_14sdp" />







  </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_card"
        android:background="@android:color/transparent"
        android:id="@+id/remove_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>