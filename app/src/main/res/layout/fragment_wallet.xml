<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".payment.ui.WalletFragment">
<com.mevron.rides.rider.payment.ui.BalanceDetailsTopView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/balance_top_layer"
    android:visibility="visible"
    app:layout_constraintTop_toTopOf="parent"/>

<com.mevron.rides.rider.payment.ui.BalanceDetaillsDetails
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/balance_details"
    app:layout_constraintTop_toBottomOf="@id/balance_top_layer"/>

<com.mevron.rides.rider.payment.ui.CashOutAddFundLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_view"
    android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>