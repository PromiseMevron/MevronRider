<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.OTPFragment">

    <ImageButton
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/back_button"
        android:src="@drawable/ic_back_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/back_button"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_the_verification_code_sent_to_you"
        android:fontFamily="@font/dmsans_regular"
        android:textFontWeight="500"
        android:textSize="@dimen/_25ssp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/we_have_sent_you_a_six_digit_code_on_your"
        android:fontFamily="@font/dmsans_regular"
        android:textFontWeight="500"
        android:textSize="@dimen/_14ssp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/gray_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        tools:targetApi="p" />


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:itemBackground="@android:color/transparent"
            android:textColor="@android:color/black"
            app:lineColor="#000000"
            app:viewType="line" />


    </LinearLayout>

    <ImageView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_error_otp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/incorrect_number"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next_unenabled"
        android:backgroundTint="@android:color/transparent"
        android:enabled="false"
        android:id="@+id/next_button"
        android:contentDescription="@string/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/incorrect_number"
        android:layout_marginTop="@dimen/_20sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resend_otp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/next_button"
        app:layout_constraintBottom_toBottomOf="@id/next_button">

        <ImageView
            android:id="@+id/resend_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_resend"/>


        <TextView
            android:id="@+id/resend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_code"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/primary_dark"
            tools:targetApi="p" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>