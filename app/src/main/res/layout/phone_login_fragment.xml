<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.PhoneLoginFragment">

    <ImageButton
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/back_button"
        android:visibility="gone"
        android:src="@drawable/ic_back_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/back_button"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hey_tell_us_your_mobile_number"
        android:fontFamily="@font/dmsans_regular"
        android:textFontWeight="500"
        android:textSize="@dimen/_25ssp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/we_ll_send_a_verification_code_on_this_number"
        android:fontFamily="@font/dmsans_regular"
        android:textFontWeight="500"
        android:textSize="@dimen/_14ssp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/gray_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        tools:targetApi="p" />


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_30sdp">

       <com.hbb20.CountryCodePicker
           android:layout_height="wrap_content"
           android:layout_width="0dp"
           android:layout_weight="2"
           android:id="@+id/country_picker"
           app:ccp_autoDetectCountry="true"
           app:ccp_autoFormatNumber="true"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/phone_number"
            android:hint="845 647 3215"
            android:backgroundTint="@android:color/transparent"
            android:inputType="phone"/>



    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/incorrect_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/incorrect_number"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next_unenabled"
        android:backgroundTint="@android:color/transparent"
        android:enabled="false"
        android:id="@+id/next_button"
        android:contentDescription="@string/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/incorrect_number"
        android:layout_marginTop="@dimen/_20sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>