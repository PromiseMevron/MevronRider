<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.referal.ReferalDetailFragment">

    <ImageButton
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/back_button"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/back_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bella_doe_ride_report"
        android:textColor="#383838"
        app:layout_constraintStart_toStartOf="@id/back_button"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        android:layout_marginTop="@dimen/_12sdp"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/poppins_regular"
        android:textFontWeight="600"
        android:lineHeight="@dimen/_42sdp"
        android:id="@+id/report_name"
        tools:targetApi="p" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/report_name"
        android:layout_marginTop="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:id="@+id/date_selector"
        android:backgroundTint="#F8F9F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2F2F2F"
                    android:text="@string/from"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/_14sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:textFontWeight="400"
                    android:maxLines="1"
                    android:lineHeight="@dimen/_17sdp"

                    tools:targetApi="p" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:id="@+id/select_start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2F2F2F"
                            android:text="@string/from"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="@dimen/_10ssp"
                            android:fontFamily="@font/poppins_regular"
                            android:textFontWeight="400"
                            android:maxLines="1"
                            android:lineHeight="@dimen/_17sdp"
                            android:id="@+id/start_date"
                            tools:targetApi="p" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_next_yellow"
                            android:layout_marginEnd="@dimen/_8sdp"/>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2F2F2F"
                    android:text="@string/to"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/_14sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:textFontWeight="400"
                    android:maxLines="1"
                    android:lineHeight="@dimen/_17sdp"

                    tools:targetApi="p" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:id="@+id/select_end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2F2F2F"
                            android:text="@string/to"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="@dimen/_10ssp"
                            android:fontFamily="@font/poppins_regular"
                            android:textFontWeight="400"
                            android:maxLines="1"
                            android:lineHeight="@dimen/_17sdp"
                            android:id="@+id/end_date"
                            tools:targetApi="p" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_next_yellow"
                            android:layout_marginEnd="@dimen/_8sdp"/>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        app:layout_constraintTop_toBottomOf="@id/date_selector"
        android:layout_marginTop="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:backgroundTint="#FFF7EB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:maxLines="1"
                android:textColor="@color/primary"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@id/back_button"
                app:layout_constraintTop_toBottomOf="@id/back_button"
                android:textSize="@dimen/_30ssp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="700"
                android:visibility="visible"
                android:lineHeight="@dimen/_60sdp"
                android:id="@+id/ride_number"
                tools:targetApi="p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rides Completed"
                android:maxLines="1"
                android:textColor="@color/primary"
                android:textAlignment="center"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:lineHeight="@dimen/_21sdp"
                android:id="@+id/ride_state"
                tools:targetApi="p" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>