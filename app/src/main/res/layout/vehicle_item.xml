<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:id="@+id/background"
    android:layout_height="@dimen/_60sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">
    <ImageView
        android:layout_width="@dimen/_68sdp"
        android:layout_height="@dimen/_38sdp"
        tools:src="@drawable/bike"
        android:id="@+id/vehicle_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bike"
        app:layout_constraintStart_toEndOf="@id/vehicle_image"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_13ssp"
        android:textColor="#383838"
        app:layout_constraintTop_toTopOf="@id/vehicle_image"
        android:id="@+id/vehicle_name"/>

    <ImageView
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:src="@drawable/ic_people"
        app:layout_constraintStart_toStartOf="@id/vehicle_name"
        app:layout_constraintTop_toBottomOf="@id/vehicle_name"
        android:id="@+id/people"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="01"
        app:layout_constraintStart_toEndOf="@id/people"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_7ssp"
        android:textColor="#999999"
        app:layout_constraintTop_toTopOf="@id/people"
        android:id="@+id/vehicle_count"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$08"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_13ssp"
        android:textColor="#383838"
        app:layout_constraintTop_toTopOf="@id/vehicle_image"
        android:id="@+id/vehicle_price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3:24 PM"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_10ssp"
        android:textColor="#999999"
        app:layout_constraintTop_toTopOf="@id/vehicle_count"
        android:id="@+id/vehicle_arrival"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>